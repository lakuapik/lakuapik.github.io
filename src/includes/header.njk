<header
  x-data="{
    darkMode: $persist(window.matchMedia('(prefers-color-scheme: dark)').matches),
    toggleClass() {
      var c = document.documentElement.classList;
      this.darkMode ? c.add('dark') : c.remove('dark');
    },
    init() { this.toggleClass(); },
    toggle() { this.darkMode = !this.darkMode; this.toggleClass(); },
  }"
  class="flex h-16 p-5 border-b border-gray-200 print:hidden dark:bg-gray-800 dark:border-gray-700 dark:text-gray-100">
  <div class="flex items-center justify-between w-full max-w-screen-lg mx-auto space-x-4">
    <a aria-label="Logo" href="/" class="text-lg font-semibold leading-none sm:inline-block dark:text-gray-200">
      <span>ğŸ•ï¸ {{ config.app.name }}</span>
    </a>
    <div class="flex space-x-2 xs:space-x-4 md:space-x-6">
      <a href="/pieces">ğŸªµï¸ pieces</a>
      <a href="/contact">ğŸ“«ï¸ contact</a>
      <button class="flex mx-2" x-on:click="toggle()" x-bind:title="`${(darkMode ? 'Turn off' : 'Turn on')} dark mode`">
        <svg x-show="darkMode" class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
        </svg>
        <svg x-show="!darkMode" class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
